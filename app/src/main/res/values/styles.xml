<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:windowBackground">@color/base</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/status_bar</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigation_bar</item>
    </style>

    <!-- this style is used in toolbar xml -->
    <style name ="LightPopupMenu" parent="android:Theme.Holo.Light"/>

    <!-- style for Collction Dialog IN/OUT animation -->
    <style name="CommentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/CommentDialogAnimation</item>
    </style>

    <style name="CommentDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/page_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/page_bottom_out</item>
    </style>

    <style name="FavoriteCommentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_below">@id/image</item>
        <item name="android:layout_toLeftOf">@id/ic_share</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="FavoriteCommentIcon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_below">@id/image</item>
        <item name="android:layout_toLeftOf">@id/comment_num</item>
        <item name="android:src">@drawable/ic_comment_black_48dp</item>
        <item name="android:background">@drawable/btn_ripple_bg</item>
        <item name="android:alpha">0.5</item>
        <item name="android:padding">16dp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="DetailFooter">

    </style>

</resources>
