<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/image"
        layout="@layout/detail_trans_share" />

    <FrameLayout android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/detail_container"
        android:background="@color/white_dull"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/LightPopupMenu">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        style="@style/DetailFooter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ic_favorite"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_favorite_black_48dp"
            android:background="@drawable/btn_ripple_bg"
            android:contentDescription="@string/icon"
            android:padding="16dp"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/favorite_num"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textColor="@android:color/tertiary_text_light"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ic_comment"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_comment_black_48dp"
            android:background="@drawable/btn_ripple_bg"
            android:contentDescription="@string/icon"
            android:padding="16dp"
            android:alpha="0.5"/>

        <ImageView
            android:id="@+id/ic_share"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_share_black_48dp"
            android:background="@drawable/btn_ripple_bg"
            android:contentDescription="@string/icon"
            android:padding="16dp"
            android:alpha="0.5"/>

    </LinearLayout>

</FrameLayout>